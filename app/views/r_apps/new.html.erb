</ul>

<!-- BEGIN STEP 1 -->
	<div id="step-1">
		<%= render :partial => 'create_r_app',  :locals => {:f => f }   %>
	</div>
<!-- END STEP 1 -->

	<%= f.fields_for :i_apps,  @r_app.i_apps do |iapps| %>
	
		<!-- BEGIN STEP 2 -->
			<div id="step-2">
				<%= render :partial => 'i_apps/create_personal_information',  :locals => {:f => iapps }  %>
			</div>
		<!-- END STEP 2 -->
		<!-- BEGIN STEP 3 -->
			<div id="step-3">
				<%= render :partial => 'i_apps/create_vehicles',  :locals => {:f => iapps }  %>
			</div>
		<!-- END STEP 3 -->
		<!-- BEGIN STEP 4 -->
			<div id="step-4">
				<%= render :partial => 'i_apps/create_previous_employments',  :locals => {:f => iapps }  %>
			</div>
		<!-- END STEP 4 -->	
		
		<!-- BEGIN STEP 5 -->
			<div id="step-5">
				<%= render :partial => 'i_apps/create_previous_addresses',  :locals => {:f => iapps }  %>
			</div>
