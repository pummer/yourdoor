<h1 id="appstitle">Apartment Rental Application</h1>

<%= form_for(@r_app) do |f| %>
  <% if @r_app.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@r_app.errors.count, "error") %> prohibited this r_app from being saved:</h2>

      <ul>
      <% @r_app.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<fieldset class="appsproperty">
<h4>Property</h4>
	<%= f.fields_for :property, @r_app.property do |u| %>
		<%= render :partial => 'properties/create',  :locals => {:u => u }  %>
	<% end %>
</fieldset>

<fieldset class="appslandlord">
<h4>Landlord</h4>
	<%= f.fields_for :landlord,  @r_app.landlord do |u| %>
		<%= render :partial => 'ooglers/create',  :locals => {:f => u }  %>
	<% end %>
</fieldset>

<fieldset class="appsbroker">
<h4>Broker</h4>
	<%= f.fields_for :listing_broker,  @r_app.listing_broker do |u| %>
		<%= render :partial => 'ooglers/create',  :locals => {:f => u }  %>
	<% end %>
</fieldset>

<fieldset class="appsindividual">
	<%= f.fields_for :i_apps,  @r_app.i_apps do |iapps| %>
		<%= render :partial => 'i_apps/create',  :locals => {:f => iapps }  %>
	<% end %>
</fieldset>


  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
