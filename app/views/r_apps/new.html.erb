		<!-- BEGIN STEP 6 -->
			<div id="step-6">
				<%= render :partial => 'i_apps/create_financial_history',  :locals => {:f => iapps }  %>
			</div>
		<!-- END STEP 6 -->
		
		<!-- BEGIN STEP 7 -->
			<div id="step-7">
				<%= render :partial => 'i_apps/create_emergency_contacts',  :locals => {:f => iapps }  %>
			</div>
